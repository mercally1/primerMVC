@model ProyectoCrud.Models.Contacto

@{
    ViewBag.Title = "Registrar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top:30px">
    <div class="col-sm-12">

        <div class="panel panel-warning">

            <div class="panel-heading">
                <h4>Nuevo Contacto</h4>
            </div>
            <div class="panel-body">
                <form action="@Url.Action("Registrar","Contacto")" method="post">

                    <div class="form-group">
                        <label>Nombre</label>
                        <input type="text" class="form-control" name="Nombre"
                    </div>

                    <div class="form-group">
                        <label>Apellido </label>
                        <input type="text" class="form-control" name="Apellido"
                    </div>

                    <div class="form-group">
                        <label>Telefono</label>
                        <input type="text" class="form-control" name="Telefono"
                    </div>

                    <div class="form-group">
                        <label>Correo</label>
                        <input type="text" class="form-control" name="Correo"
                    </div>

                    <button type="submit" class="btn btn-primary btn-sm">Registar</button>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Inicio","Contacto")"> Volver</a>
                </form>

               
            </div>
            </div>
        </div>
    </div>


</div>

